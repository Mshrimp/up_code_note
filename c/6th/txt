int a[2][3][4]
int a[2][3][4][5]
{{{{1,2,3,4,5}, {}, {}, {}}, {}, {}}, {{}, {}, {}}};
 
 &a:	2 * 3 * 4 * 5 * 4
 a:		3 * 4 * 5 * 4
 a[0]:	4 * 5 * 4
 a[0][0] 5 * 4
 a[0][0][0]	4
 &a[0][0][0][0]
